=row_and_grid(size: 4) do
  %h2 Log in

  =simple_form_for resource, as: resource_name, url: session_path(resource_name) do |f|
    =f.input :email, required: false, autofocus: true, wrapper_html: {class: 'form-group'}, input_html: {class: 'form-control'}
    =f.input :password, required: false, wrapper_html: {class: 'form-group'}, input_html: {class: 'form-control'}
    =f.input :remember_me, as: :boolean, wrapper_html: {class: 'checkbox'} if devise_mapping.rememberable?

    = button('Log in', log_in_icon)
  